{
  "Connection": {
    "Path": "/tmp/fpm-{{rand 1024}}.sock"
  },
  "Server": {
    "ConfigFile": "php-fpm.tmpl"
  },
  "Actions": [
    {
      "Type": "server-start",
      "Expect": {
        "Output": [
          "NOTICE: {{app}} is running, pid {{pid}}",
          "NOTICE: ready to handle connections"
        ]
      }
    },
    {
      "Type": "server-signal",
      "Signal": "SIGTERM",
      "Expect": {
        "Output": [
          "NOTICE: Terminating ...",
          "NOTICE: exiting, bye-bye!"
        ]
      }
    }
  ]
}
